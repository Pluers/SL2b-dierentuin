@model IEnumerable<dierentuin.Models.Enclosure>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabitatType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnclosureSize)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Climate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HabitatType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecurityLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnclosureSize) m<sup>2</sup>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>