@model dierentuin.Models.Enclosure

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enclosure</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Climate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Climate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HabitatType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HabitatType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecurityLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnclosureSize)
        </dt>
        <dd class="col-sm-10">
            @* m<sup>2</sup> is to actually display the square meters *@
            @Html.DisplayFor(model => model.EnclosureSize) m<sup>2</sup>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animals)
        </dt>
        <dd class="col-sm-10">
            @foreach (var animal in Model.Animals)
            {
                <p>- @Html.DisplayFor(modelItem => animal.Name)</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
