@model IEnumerable<dierentuin.Models.Animal>

@{
    ViewData["Title"] = "Animals";
}

<h1>Animals</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Animal</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DietaryClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpaceRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityRequirement)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DietaryClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityPattern)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prey.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enclosure.Name)
                </td>
                <td>
                    @* m<sup>2</sup> is to actually display the square meters *@
                    @Html.DisplayFor(modelItem => item.SpaceRequirement) m<sup>2</sup>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecurityRequirement)
                </td>
                <td>
                    <div class="d-flex align-items-center gap-1">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary flex-grow-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id"
                            class="btn btn-sm btn-secondary flex-grow-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger flex-grow-1">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>